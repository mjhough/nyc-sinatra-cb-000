<!DOCTYPE html>
<html>
    <head>
        <title>All Figures</title>
    </head>
    <body>
        <h1>All Figures</h1>
        <% @figures.each do |figure| %>
            <h2><%= figure.name %></h2>
            <h3>Landmarks</h3>
            <ul>
            <% figure.landmarks.each do |landmark| %>
                <li><h4><%= landmark.name %></h4></li>
            <% end %>
            </ul>
            <h3>Titles</h3>
            <ul>
            <% figure.titles.each do |title| %>
                <li><h4><%= title.name %></h4></li>
            <% end %>
            </ul>
            <br><br>
        <% end %>
    </body>
</html>